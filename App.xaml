<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LiverLife"
             x:Class="LiverLife.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0.8,0" EndPoint="1,1">
            <!-- Use the LinearGradientBrush as the default background for all pages -->
                <!--<GradientStop Color="#38b6ff" Offset="0" />-->
                <!--<GradientStop Color="#7132a8" Offset="0" />-->
                <GradientStop Color="#7132a8" Offset="0" />
                <GradientStop Color="LightGray" Offset="1" />
            </LinearGradientBrush>

        </ResourceDictionary>
    </Application.Resources>
</Application>
