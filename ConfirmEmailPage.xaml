<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiverLife.ConfirmEmailPage"
             Title="ConfirmEmailPage"
             Background="{StaticResource BackgroundGradient}">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*">

        <VerticalStackLayout Spacing="5" Grid.Column="2" Padding="20">
            <Label Style="{StaticResource ConfirmEmailPageEmailSentLabel}" />

            <Image Style="{StaticResource ConfirmEmailPageEmailLogo}"/>

            <Label  Style="{StaticResource ConfirmEmailPagelabel1}"/>

            <Label  Style="{StaticResource ConfirmEmailPagelabel2}"/>

            <Label Style="{StaticResource ConfirmEmailPagelabel3}"/>

            <Label Style="{StaticResource ConfirmEmailPagelabel4}"/>

            <Label Style="{StaticResource ConfirmEmailPagelabel5}"/>

            <Button Style="{StaticResource ConfirmEmailPageReSendVerEmailBtn}"/>

        </VerticalStackLayout>

    </Grid>
</ContentPage>